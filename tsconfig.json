{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "typeRoots" : [
      "node_modules/@types",
      "./stories/types"
    ]
  },
  "include": [
    "src/**/*",
    "stories/**/*"
  ]
}
